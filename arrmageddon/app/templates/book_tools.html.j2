{% extends "base.html.j2" %}

{% block content %}
<div class="container mt-4">
    <h1>Book Tools</h1>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Audiobookshelf Tag Sync</h5>
                    <p class="card-text">Sync Readarr Tags to Audiobookshelf</p>
                    <a href="{{ url_for('book_tools.abs_tag_sync') }}" class="btn btn-primary">Go to ABS Tag
                        Sync</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Readarr Better UI</h5>
                    <p class="card-text">Easier filtering/bulk actions (in particular, searching for all tagged
                        items at once).</p>
                    <a href="{{ url_for('book_tools.better_ui') }}" class="btn btn-primary">Go to Better UI</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Coming Soon</h5>
                    <p class="card-text">More tools will be added here in the future.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}